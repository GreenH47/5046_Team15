<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:id="@+id/text_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="This is Home"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/dietLogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diet Log"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"/>

    <Button
        android:id="@+id/dashboardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:layout_below="@id/workoutLogButton"
        android:layout_alignStart="@id/dietLogButton"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/workoutLogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Workout Log"
        android:layout_below="@id/dietLogButton"
        android:layout_alignStart="@id/dietLogButton"
        android:layout_marginTop="20dp"/>
</LinearLayout>